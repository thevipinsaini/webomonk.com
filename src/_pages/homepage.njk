<div class="row">
  <div class="col-md-10 m-auto my-3 p-3 blog-main bg-white rounded">
    <div class="heading">
      <h1>A Web monk who brings the best of everything for you!</h1>
    </div>
  </div>

</div>

<!-- Topic Cards -->
<div id="cards_landscape_wrap-2">
  <div class="container">
    <div class="row">
      {%- for post in collections.blogging %}
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
          <a href="{{ post.url }}">
            <div class="card-flyer">
              <div class="text-box">
                <div class="image-box">
                  <img src="/assets/images/content/{{ post.fileSlug }}/thumbnail.png" class="img-fluid rounded"/>
                </div>
                <div class="text-container">
                  <h6>{{ post.data.title }}</h6>
                  {# <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s.</p> #}
                </div>
              </div>
            </div>
          </a>
        </div>
      {%- endfor %}
    </div>
  </div>
</div>